<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <!-- Bootstrap  -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <!-- font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
</head>
<body>
    <%- include('partials/navigation.ejs') %>
    <section class="container d-flex justify-content-center align-items-center" style="height: 100vh;">

        <div id="formulario">
            <form action="/fotos/add" method="post">
                <div class="p-2">
                    <input type="text" name="titulo" placeholder="Título" class="form-control" required>
                </div>
                <div class="p-2">
                    <!-- <input type="text" name="descripcion" placeholder="Descripción"> -->
                    <textarea name="descripcion" rows="4" class="form-control" placeholder="Descripción" required></textarea>
                </div>
                <div class="p-2">
                    <input type="text" name="url" placeholder="URL de la imagen" class="form-control" required>
                </div>
                <div class="p-2">
                    <button type="submit" value="Guardar" class="btn btn-info">Subir</button>
                </div>
            </form>

        </div>
    </section>
</body>
</html>